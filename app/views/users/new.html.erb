<div id="container">
  <%= form_for(@user) do
      |f| %>
  <table>
    <tr>
      <th>Name</th>
      <td><%= f.text_field(:name) %></td>
    </tr>
    <tr>
      <th>Group Number</th>
      <td><%= f.text_field(:group) %></td>
    </tr>
    <tr>
      <th>Password</th>
      <td><%= f.password_field(:password) %></td>
    </tr>
    <tr>
      <th>Confirm Password</th>
      <td><%= f.password_field(:confirm_password) %></td>
    </tr>
  </table>

  <%= f.submit("Submit") %>
  <% end %>
</div>
